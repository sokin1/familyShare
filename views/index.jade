html
    head
        body
            div#mainPage(style='border:1px')
                img#mainImage(src='images/titleImage.jpg')
            div#signInForm(style='width:300px; height:110px; float: right; position: absolute; bottom: 0')
                form(action='/signup', method='post')
                    div#emailDiv(data-role='fieldcontain')
                        fieldset(data-role='controlgroup')
                            label(for='email') Email Address :
                            input(id='email', type='text', value='', placeholder='@')
                    div#passwordDiv(data-role='fieldcontain')
                        fieldset(data-role='controlgroup')
                            label(for='password') Password :
                            input(id='password', type='password', value='' )
                    div(data-role='fieldcontain')
                        input(type='submit', value='Sign in', data-transition='fade', data-theme='c')
                        input(type='button', value='Sign up', data-transition='fade', data-theme='c')
